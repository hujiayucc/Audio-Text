<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.AT" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
    </style>

    <style name="Theme.AT.Splash" parent="Base.Theme.AT">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.AT.Main" parent="Base.Theme.AT">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="TabLayoutTextSelected">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TabLayoutTextUnSelected">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>